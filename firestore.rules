
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    /**
     * @description Checks if the request is from an authenticated user.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Default-allow rule for an internal staff-facing application.
     * Grants full read and write access to any authenticated user
     * for all collections and documents.
     */
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
